---
kind: ConfigMap
apiVersion: v1
metadata:
  creationTimestamp: null
  name: homer-env-config
  namespace: {{ namespace | string }}
  labels:
    app: {{ app_name }}
    service: {{ app_name }}
    service_class_id: '{{ _apb_service_class_id }}'
    plan_id: '{{ _apb_plan_id }}'
    service_instance_id: '{{ _apb_service_instance_id }}'
data:
  # A lot of these could be secrets, -Doug
  TZ: '"Etc/UTC"'
  DB_USER: homer_user
  DB_PASS: homer_password
  USE_REMOTE_MYSQL: "false"
  DB_HOST: mysql
  DB_PORT: "3306"
  MYSQL_ROOT_PASSWORD: secret
  KAMAILIO_HEP_PORT: "9060"
