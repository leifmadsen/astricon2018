---
apiVersion: v1
kind: Service
metadata:
  labels:
    app: {{ app_name }}
    service: {{ app_name }}
    service_class_id: '{{ _apb_service_class_id }}'
    plan_id: '{{ _apb_plan_id }}'
    service_instance_id: '{{ _apb_service_instance_id }}'
    etcd_node: etcd1
  name: etcd1-{{ uniqname }}
  namespace: {{ namespace | string }}
spec:
  ports:
  - name: client
    port: 2379
    protocol: TCP
    targetPort: 2379
  - name: server
    port: 2380
    protocol: TCP
    targetPort: 2380
  selector:
    app: {{ app_name }}
    etcd_node: etcd1
