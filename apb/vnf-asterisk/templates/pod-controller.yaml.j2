---
apiVersion: v1
kind: Pod
metadata:
  name: controller-{{ uniqname }}
  namespace: {{ namespace | string }}
  labels:
    app: {{ app_name }}
    service: {{ app_name }}
    service_class_id: '{{ _apb_service_class_id }}'
    plan_id: '{{ _apb_plan_id }}'
    service_instance_id: '{{ _apb_service_instance_id }}'
spec:
  securityContext:
    nonroot: true
  containers:
    - name: controller
      image: nfvpe/vnf-asterisk-controller:latest
      imagePullPolicy: Always
      command:
        - nodemon
        - vnf-asterisk-controller.js
      ports:
        - containerPort: 8001
          protocol: TCP
      volumeMounts:
        - mountPath: /vac/includes
          name: config
  volumes:
    - name: config
      configMap:
        name: controller-config-{{ uniqname }}
        items:
          - key: config.json
            path: config.json
