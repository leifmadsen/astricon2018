---
kind: ConfigMap
apiVersion: v1
metadata:
  creationTimestamp: null
  name: controller-config-{{ uniqname }}
  namespace: {{ namespace | string }}
  labels:
    app: {{ app_name }}
    service: {{ app_name }}
    service_class_id: '{{ _apb_service_class_id }}'
    plan_id: '{{ _apb_plan_id }}'
    service_instance_id: '{{ _apb_service_instance_id }}'
data:
  config.json: |
    {
      "SERVER_PORT": "8001",
      "CONFIG_NAME": "kubernetes",
      "etcd_host": "etcd-client-{{ uniqname }}",
      "etcd_port": "2379",
      "sourcery_port": "8088",
      "temp_path": "/tmp",
      "log_stdout": true,
      "pretty_log": true
    }

